<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="240.0" prefWidth="597.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="apps.client.controllers.DesktopController">
   <children>

       <ImageView fx:id="imgDesktopBackground" fitHeight="139.0" fitWidth="216.0" layoutX="20.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
           <image>
               <Image url="@../../images/layout/default_background.jpg" />
           </image>
       </ImageView>
       <Label fx:id="lblImage" layoutX="20.0" layoutY="162.0" text="default_background.jpg">
           <font>
               <Font size="14.0" />
           </font>
       </Label>

      <ListView fx:id="lstFiles" layoutX="243.0" layoutY="11.0" prefHeight="135.0" prefWidth="186.0" style="-fx-background-color: LIGHTGREY; -fx-selection-bar: WHITE;" />
       <Label layoutX="244.0" layoutY="163.0" text="Files:">
           <font>
               <Font size="14.0" />
           </font>
       </Label>
       <Label fx:id="lblFiles" layoutX="278.0" layoutY="164.0" text="50">
           <font>
               <Font size="14.0" />
           </font>
       </Label>

       <Label fx:id="lblTitle" layoutX="436.0" layoutY="11.0" prefHeight="25.0" prefWidth="154.0" />
       <Label fx:id="lblDescription" alignment="TOP_LEFT" layoutX="436.0" layoutY="51.0" prefHeight="93.0" prefWidth="154.0" wrapText="true" />

       <Button layoutX="482.0" layoutY="153.0" mnemonicParsing="false" onAction="#btnSelectDesktop" prefHeight="25.0" prefWidth="29.0" style="-fx-background-color: transparent;">
           <graphic>
               <ImageView id="btnSelect" fitHeight="25.0" fitWidth="29.0" layoutX="482.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../../images/cms/select.png" />
                   </image>
               </ImageView>
           </graphic>
           <cursor>
               <Cursor fx:constant="HAND" />
           </cursor>
       </Button>

       <Button layoutX="517.0" layoutY="153.0" mnemonicParsing="false" onAction="#btnEditDesktop" prefHeight="25.0" prefWidth="29.0" style="-fx-background-color: transparent;">
           <graphic>
               <ImageView id="btnEdit" fitHeight="25.0" fitWidth="29.0" layoutX="517.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../../images/cms/edit.png" />
                   </image>
               </ImageView>
           </graphic>
           <cursor>
               <Cursor fx:constant="HAND" />
           </cursor>
       </Button>

       <Button layoutX="550.0" layoutY="153.0" mnemonicParsing="false" onAction="#btnDeleteDesktop" prefHeight="25.0" prefWidth="29.0" style="-fx-background-color: transparent;">
           <graphic>
               <ImageView id="btnDelete" fitHeight="25.0" fitWidth="29.0" layoutX="550.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../../images/cms/delete.png" />
                   </image>
               </ImageView>
           </graphic>
           <cursor>
               <Cursor fx:constant="HAND" />
           </cursor>
       </Button>


   </children>
</AnchorPane>
